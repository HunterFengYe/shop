<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="shop.dao.ClassDao" >
    <!-- 通过ID获取分类名字 -->
    <select id="getCla" parameterType="Integer" resultType="String">
       select class_name from shop_class where class_id=#{classId}
    </select>
</mapper>